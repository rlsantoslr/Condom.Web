@page "/account/login"
@layout PublicLayout

<PageTitle>Condom - Acessar</PageTitle>


<div class="card vw-100 vh-100 index-area-card">
    <div class="card-img-top index-area-card-img" />
    <div class="card-body mx-auto pt-5 mt-4 text-center w-100" style="max-width: 600px;">
        <h2 class="card-title fw-bold">Acessar</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="login-email-area"><i class="fas fa-envelope"></i></span>
                    <input id="login-email" class="form-control" type="email" placeholder="Digite seu e-mail" aria-describedby="login-email-area" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="login-password-area"><i class="fas fa-key"></i></span>
                    <input id="login-password" class="form-control" type="password" placeholder="Digite sua senha" aria-describedby="login-password-area" />
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-lg-12">
                <a class="btn btn-md btn-yellow" href="/dashboard">Entrar na minha conta</a>
            </div>
        </div>

        <div class="row pt-3">
            <div class="col-lg-12 text-center">
                <a href="/account/reset" class="link-dark small">Esqueci minha senha</a>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-lg-6">
                <button href="#" class="btn btn-sm btn-default"><i class="text-primary fab fa-facebook"></i> Entrar com o Facebook</button>
            </div>
            <div class="col-lg-6">
                <button href="#" class="btn btn-sm btn-default"><i class="text-danger fab fa-google"></i> Entrar com o Google</button>
            </div>
        </div>
    </div>
</div>
